# Supabase (public)
# Create a project in Supabase, then copy values from Project Settings → API.
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server-only, for cron jobs)
# Get from Project Settings → API → service_role key (keep secret!)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# GitHub API
# Create a Personal Access Token (PAT) with public_repo scope
# https://github.com/settings/tokens
GITHUB_TOKEN=

# Cron Security
# Random string to protect cron endpoints from unauthorized access
CRON_SECRET=

# Discovery Configuration (optional, defaults shown)
# Date range for repo discovery
DISCOVERY_CREATED_FROM=2020-01-01
DISCOVERY_PUSHED_AFTER=2025-01-01

# Minimum stars filter
DISCOVERY_STARS_MIN=100

# Batching limits (to stay within Vercel function time limits)
DISCOVERY_MAX_TASKS_PER_RUN=3
DISCOVERY_MAX_PAGES_PER_TASK=3

# Rate limiting (milliseconds between GitHub API requests)
GITHUB_SEARCH_DELAY_MS=2100




